.navbar
  position relative
  padding-top 3rem
  text-align center
  .nav
    list-unstyled()
    .nav-item-link
      display block
      padding 1rem;
      color sea-dark
      text-decoration none
      cursor pointer
      &:hover
        color link-hover-color
    &.nav-main
      .nav-item-link
        &::before, i.fe
          display block
          line-height 1.5 // 上下间距
        &::before
          font-family 'feathericon'
      .nav-item
        &:nth-child(1)         // home 首页
          .nav-item-link
            &::before
              content '\f12f'
        &:nth-child(5)         // archives 时间线
          .nav-item-link
            &::before
              content '\f12a'
        //&:nth-child(3)         // gallery 相册
        //  .nav-item-link
        //    &::before
        //      content '\f1a9'
        &:nth-child(3)         // favorites 收藏
           .nav-item-link
             &::before
               content '\f11e'

        &:nth-child(2)         // categories  分类
          .nav-item-link
            &::before
              content '\f18c'
        //&:nth-child(6)         // tags 标签云
        //  .nav-item-link
        //    &::before
        //      content '\f153'
        &:nth-child(4)         // about 关于
          .nav-item-link
            &::before
              content '\f174'

        // &:nth-child(5)         // links
        //   .nav-item-link
